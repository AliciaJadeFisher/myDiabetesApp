<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--LinearLayout for the widgets-->
    <LinearLayout
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:text="@string/welcome_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:id="@+id/tv_dailyDisplay"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:text="@string/_8_5_mml_l"
                android:textSize="15sp"
                android:background="@drawable/textview_circle"/>
            <TextView
                android:id="@+id/tv_daily"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_below="@+id/tv_dailyDisplay"
                android:text="@string/daily_average"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                />

            <TextView
                android:id="@+id/tv_weeklyDisplay"
                android:layout_toStartOf="@+id/tv_monthlyDisplay"
                android:layout_toEndOf="@+id/tv_dailyDisplay"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/textview_circle"
                android:gravity="center"
                android:text="@string/_8_5_mml_l"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_weekly"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_below="@id/tv_weeklyDisplay"
                android:layout_toStartOf="@+id/tv_monthlyDisplay"
                android:layout_toEndOf="@+id/tv_dailyDisplay"
                android:text="@string/weekly_average"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                />

            <TextView
                android:id="@+id/tv_monthlyDisplay"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:text="@string/_8_5_mml_l"
                android:textSize="15sp"
                android:background="@drawable/textview_circle"/>
            <TextView
                android:id="@+id/tv_monthly"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tv_monthlyDisplay"
                android:text="@string/monthly_average"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                />

        </RelativeLayout>


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextColor="@color/colorAccent"
            android:background="?attr/colorPrimaryDark">
            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_records"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/records"
                android:clickable="true">
            </com.google.android.material.tabs.TabItem>
            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_graph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/graph"
                android:clickable="true">
            </com.google.android.material.tabs.TabItem>
        </com.google.android.material.tabs.TabLayout>

    </LinearLayout>

    <!--FloatingActionButton that links to the AddEntryActivity-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_entry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="72dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_add_circle_outline_black_24dp" />
</androidx.constraintlayout.widget.ConstraintLayout>