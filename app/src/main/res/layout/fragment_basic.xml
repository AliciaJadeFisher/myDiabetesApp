<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <!--LinearLayout for the widgets-->
    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="56dp"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

    <!--TextView for the blood sugar type-->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/what_shall_we_call_you"
        android:textColor="@color/colorPrimaryDark"
        android:paddingTop="10dp"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/name"
        android:textSize="15sp"
        android:paddingTop="10dp"
        android:textColorHint="@color/colorPrimaryDark"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"/>

    <!--TextView for the blood sugar type-->
    <TextView
        android:id="@+id/tv_bs_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/blood_sugar_measurement"
        android:textColor="@color/colorPrimaryDark"
        android:paddingTop="10dp"
        android:textSize="15sp"/>

    <!--Spinner for the blood sugar type-->
    <Spinner
        android:id="@+id/spn_bs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:textColor="@color/colorPrimaryDark"/>

    <!--TextView for the blood sugar type-->
    <TextView
        android:id="@+id/tv_carb_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/carbohydrate_measurement"
        android:textColor="@color/colorPrimaryDark"
        android:paddingTop="10dp"
        android:textSize="15sp"/>

    <!--Spinner for the blood sugar type-->
    <Spinner
        android:id="@+id/spn_carb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:textColor="@color/colorPrimaryDark"/>

    <!--TextView for the blood sugar type-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--Button that saves the user's details and links to the HomeActivity-->
            <Button
                android:id="@+id/btn_next"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_background"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>